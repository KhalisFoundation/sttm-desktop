{
  "categories": {
    "slide-layout": {
      "title": "SLIDE_LAYOUT",
      "type": "title",
      "subcategories": ["font-sizes", "display-options", "autoplay-options"]
    },
    "display-options": {
      "title": "DISPLAY_OPTIONS",
      "type": "switch",
      "settings": [
        "akhandpatt",
        "display-next-line",
        "left-align",
        "larivaar",
        "larivaar-assist",
        "larivaar-assist-type",
        "display-vishraams",
        "vishraam-type",
        "vishraam-source"
      ]
    },
    "font-sizes": {
      "title": "FONT_SIZES",
      "type": "range",
      "max": 20,
      "min": 1,
      "step": 1,
      "settings": [
        "gurbani-font-size",
        "content1-font-size",
        "content2-font-size",
        "content3-font-size",
        "announcements-font-size",
        "reset-font-sizes"
      ]
    },
    "visibility": {
      "title": "VISIBILITY",
      "type": "checkbox",
      "settings": ["content1-visibility", "content2-visibility", "content3-visibility"]
    },
    "autoplay-options": {
      "title": "AUTOPLAY_OPTIONS",
      "type": "switch",
      "settings": ["autoplay-toggle", "autoplay-delay"]
    },
    "bani-and-languages": {
      "title": "BANI_AND_LANGUAGES",
      "type": "title",
      "subcategories": ["bani", "language"]
    },
    "bani": {
      "title": "BANI_SETTINGS",
      "type": "dropdown",
      "settings": ["bani-length"]
    },
    "language": {
      "title": "LANGUAGE_SETTINGS",
      "type": "dropdown",
      "settings": ["teeka-source"]
    },
    "app-settings": {
      "title": "APP_SETTINGS",
      "type": "title",
      "subcategories": ["app-layout", "other-options"]
    },
    "app-layout": {
      "title": "APP_SETTINGS",
      "type": "switch",
      "settings": ["quick-tools", "shortcut-tray", "live-feed"]
    },
    "other-options": {
      "title": "OTHER_OPTIONS",
      "type": "switch",
      "settings": ["limit-change-log", "statistics"]
    }
  },
  "settings": {
    "gurbani-font-size": {
      "title": "BANI",
      "initialValue": 9
    },
    "content1-font-size": {
      "title": "",
      "initialValue": 5,
      "addon": ["content1-visibility", "content1"]
    },
    "content2-font-size": {
      "title": "",
      "initialValue": 4,
      "addon": ["content2-visibility", "content2"]
    },
    "content3-font-size": {
      "title": "",
      "initialValue": 4,
      "addon": ["content3-visibility", "content3"]
    },
    "announcements-font-size": {
      "title": "ANNOUNCEMENTS",
      "initialValue": 7
    },
    "reset-font-sizes": {
      "title": "RESET_FONT_SIZES",
      "type": "reset-button",
      "resetSettings": [
        "gurbani-font-size",
        "content1-font-size",
        "content2-font-size",
        "content3-font-size",
        "announcements-font-size"
      ]
    },
    "content1-visibility": {
      "title": "TRANSLATION_VISIBILITY",
      "type": "checkbox",
      "initialValue": true
    },
    "content2-visibility": {
      "title": "TEEKA_VISIBILITY",
      "type": "checkbox",
      "initialValue": true
    },
    "content3-visibility": {
      "title": "TRANSLITERATION_VISIBILITY",
      "type": "checkbox",
      "initialValue": true
    },
    "content1": {
      "title": "",
