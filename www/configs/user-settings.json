    "limit-change-log": {
      "title": "LIMIT_CHANGELOG",
      "initialValue": false,
      "notes": "LIMIT_CHANGELOG_MSG"
    },
    "statistics": {
      "title": "COLLECT_STATISTICS",
      "initialValue": true,
      "store": "userPrefs.app.analytics.collectStatistics"
    },
    "theme": {
      "title": "THEME",
      "initialValue": "light-theme"
    },
    "themeBg": {
      "title": "THEME_BG",
      "initialValue": false,
      "dontApplyClass": true
    },
    "isSingleDisplayMode": {
      "title": "SINGLE_DISPLAY",
      "initialValue": false
    }
