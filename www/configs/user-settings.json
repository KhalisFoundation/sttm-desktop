      "disableWhen": "content1-visibility",
      "options": [
        {
          "label": "teeka",
          "options": [{ "id": "teeka-punjabi", "text": "Punjabi" }]
        },
        {
          "label": "translation",
          "options": [
            { "id": "translation-english", "text": "English" },
            { "id": "translation-hindi", "text": "Hindi" },
            { "id": "translation-spanish", "text": "Spanish" }
          ]
        },
        {
          "label": "transliteration",
          "options": [
            { "id": "transliteration-english", "text": "English" },
            { "id": "transliteration-hindi", "text": "Hindi" }
          ]
        }
      ]
    },
    "content2": {
      "title": "",
      "initialValue": "teeka-punjabi",
      "type": "multilevel-dropdown",
      "disableWhen": "content2-visibility",
      "options": [
        {
          "label": "teeka",
          "options": [{ "id": "teeka-punjabi", "text": "Punjabi" }]
        },
        {
          "label": "translation",
          "options": [
            { "id": "translation-english", "text": "English" },
            { "id": "translation-hindi", "text": "Hindi" },
            { "id": "translation-spanish", "text": "Spanish" }
          ]
        },
        {
          "label": "transliteration",
          "options": [
            { "id": "transliteration-english", "text": "English" },
            { "id": "transliteration-hindi", "text": "Hindi" }
          ]
        }
      ]
    },
    "content3": {
      "title": "",
      "initialValue": "transliteration-english",
      "type": "multilevel-dropdown",
      "disableWhen": "content3-visibility",
      "options": [
        {
          "label": "teeka",
          "options": [{ "id": "teeka-punjabi", "text": "Punjabi" }]
        },
        {
          "label": "translation",
          "options": [
            { "id": "translation-english", "text": "English" },
            { "id": "translation-hindi", "text": "Hindi" },
            { "id": "translation-spanish", "text": "Spanish" }
          ]
        },
        {
          "label": "transliteration",
          "options": [
            { "id": "transliteration-english", "text": "English" },
            { "id": "transliteration-hindi", "text": "Hindi" }
          ]
        }
      ]
    },
    "akhandpatt": {
      "title": "AKHAND_PATH_VIEW",
      "notes": "CHROMECAST_UNAVAILABLE",
      "initialValue": false,
      "disableSetting": "display-next-line"
    },
    "display-next-line": {
      "title": "NEXT_LINE",
      "notes": "AKHAND_PATH_UNAVAILABLE",
      "initialValue": false,
      "disableWhen": "akhandpatt"
    },
    "left-align": {
      "title": "LEFT_ALIGN",
      "initialValue": false
    },
    "larivaar": {
      "title": "LARIVAAR",
      "initialValue": false
    },
    "larivaar-assist": {
      "title": "LARIVAAR_ASSIST",
      "notes": "LARIVAAR_ASSIST_MSG",
      "initialValue": false
    },
    "larivaar-assist-type": {
      "title": "ASSIST_TYPE",
      "type": "dropdown",
      "options": {
        "single-color": "SINGLE_COLOR",
        "multi-color": "MULTI_COLOR"
      },
      "initialValue": "single-color"
    },
    "display-vishraams": {
      "title": "SHOW_VISHRAAMS",
      "initialValue": false
    },
    "vishraam-type": {
      "title": "VISHRAAM_OPTIONS",
      "type": "dropdown",
      "initialValue": "colored-words",
      "options": {
        "colored-words": "COLORED_WORDS",
        "gradient-bg": "GRADIENT_BG"
      }
    },
    "vishraam-source": {
      "title": "VISHRAAM_SOURCE",
      "type": "dropdown",
      "options": {
        "sttm2": "STTM2",
        "igurbani": "I_GURBANI",
        "sttm": "STTM"
      },
      "initialValue": "sttm2"
    },
    "autoplay-toggle": {
      "title": "AUTO_PLAY",
      "initialValue": false
    },
    "autoplay-delay": {
      "title": "DELAY",
      "type": "range",
      "max": 20,
      "min": 1,
      "step": 1,
      "initialValue": 10
    },
    "bani-length": {
      "title": "BANI_LENGTH",
      "type": "dropdown",
      "options": {
        "short": "SHORT_BANI_LENGTH",
        "medium": "MEDIUM_BANI_LENGTH",
        "long": "LONG_BANI_LENGTH",
        "extralong": "EXTRA_LONG_BANI_LENGTH"
      },
      "initialValue": "short"
    },
    "mangal-position": {
      "title": "MANGAL_POSITION",
      "type": "dropdown",
      "options": {
        "current": "CURRENT_MANGAL",
        "above": "ABOVE_MANGAL"
      },
      "initialValue": "current"
    },
    "translation-language": {
      "title": "TRANSLATION_LANGUAGE",
      "type": "dropdown",
      "options": {
        "English": "ENGLISH_LANGUAGE",
        "Spanish": "SPANISH_LANGUAGE",
        "Hindi": "HINDI_LANGUAGE"
      },
      "initialValue": "English"
    },
    "translation-english-source": {
      "title": "TRANSLATION_SOURCE",
      "type": "dropdown",
      "options": {
        "bdb": "BANI_DB",
        "ms": "MANMOHAN_SINGH",
        "ssk": "SANT_SINGH_KHALSA"
      },
      "condition": "translation-language",
      "conditionValue": "English",
      "initialValue": "bdb"
    },
    "translation-hindi-source": {
      "title": "TRANSLATION_SOURCE",
      "type": "dropdown",
      "options": {
        "ss": "SAHIB_SINGH",
        "sts": "SANT_SINGH"
      },
      "condition": "translation-language",
      "conditionValue": "Hindi",
      "initialValue": "ss"
    },
    "teeka-source": {
      "title": "TEEKA_SOURCE",
      "type": "dropdown",
      "options": {
        "bdb": "BANI_DB",
        "ft": "FAREEDKOT",
        "ms": "MANMOHAN_SINGH",
        "ss": "SANT_SINGH"
      },
      "initialValue": "bdb"
    },
    "transliteration-language": {
      "title": "TRANSLITERATION_LANGUAGE",
      "type": "dropdown",
      "options": {
