{
  "app": {
    "title": "App Settings",
    "settings": {
      "theme": {
        "title": "App Theme",
        "type": "radio",
        "options": {
          "light-theme": "Light Theme",
          "dark-theme": "Dark Theme"
        }
      },
      "layout": {
        "title": "App Layout",
        "type": "switch",
        "options": {
          "presenter-view": "Presenter View"
        }
      }
    }
  },
  "slide-layout": {
    "title": "Slide Layout",
    "settings": {
      "fields": {
        "title": "Fields to Display",
        "type": "checkbox",
        "options": {
          "display-translation": "English Translation",
          "display-teeka": "Punjabi Teeka",
          "display-transliteration": "Transliteration",
          "display-next-line": "Next Line"
        }
      },
      "font-sizes": {
        "title": "Font Sizes",
        "type": "range",
        "options": {
          "gurbani": {
            "title": "Gurbani",
            "max": 20,
            "min": 1,
            "step": 1
          },
          "translation": {
            "title": "English Translation",
            "max": 20,
            "min": 1,
            "step": 1
          },
          "teeka": {
            "title": "Punjabi Teeka",
            "max": 20,
            "min": 1,
            "step": 1
          },
          "transliteration": {
            "title": "Transliteration",
            "max": 20,
            "min": 1,
            "step": 1
          }
        }
      },
      "display-options": {
        "title": "Display Options",
        "type": "switch",
        "options": {
          "akhandpaatt": "Akhand Paatth View (Beta)",
          "larivaar": "Larivaar",
          "left-align": "Left-Align"
        }
      }
    }
  }
}
